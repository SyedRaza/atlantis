<%= content_for :header do %>
    <h1>Change your password</h1>
<% end %>

<%= content_for :css do %>
    <%= theme_stylesheet_link_tag 'devise/login' %>
<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input  :reset_password_token, :as=>:hidden%>
  <%= f.input  :password,:hint=>'New Password', :label=>false%>
  <%= f.input  :password_confirmation,:hint=>'Confirm New Password', :label=>false%>
  <%= f.button :submit, "Change my password", :class=>'button big' %>
<% end %>

<%= render :partial => "devise/shared/links" %>