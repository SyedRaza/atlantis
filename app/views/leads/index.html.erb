<%= content_for :sidebar do %>
    <%= render :partial => 'filter' %>
<% end %>

<%= content_for :header do %>
    <h1>Leads</h1>
    <% unless params[:ctype]== nil %>
        <%= '['+ params[:ctype].humanize()+']' %>
        <%= link_to "clear", leads_url %>
    <% end %>
    <% if can? :create, Lead %>
        <%= link_to '<span class="ui-icon ui-icon-document">&nbsp;</span>New Lead'.html_safe, new_lead_url, :class=>'right', :style=>'margin-right:95px;' %>
    <% end %>
<% end %>

<%= content_for :js do %>
    <%= javascript_include_tag "leads/index" %>
    <%= javascript_include_tag "notes/global" %>
<% end %>

<%= content_for :css do %>
    <%= stylesheet_link_tag "leads/index" %>
    <%= theme_stylesheet_link_tag 'notes/index' %>
<% end %>

<div id="leads_container" class="sidetabs-container">
  <div id="lead_selector" class="sidetabs-tabs">
    <%= side_tabs_for_periods :leads,
                              ['All Active', 'Today', 'This Week', 'This Month', 'This Year', 'Archives'] %>
  </div>
  <div id="leads" class="sidetabs-pane">
  </div>
</div>