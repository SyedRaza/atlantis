<div id="new_contact">
  <div  class="ui-dialog ui-widget ui-widget-content ui-corner-all  ui-draggable ui-resizable" tabindex="-1" role="dialog" aria-labelledby="ui-dialog-title-new_company_dialog">
    <div class="ui-dialog-titlebar ui-widget-header ui-corner-all ui-helper-clearfix">`
      <span class="ui-dialog-title" id="ui-dialog-title-new_contact_dialog">Create New Contact</span>
      <a href="#" class="ui-dialog-titlebar-close ui-corner-all" role="button">
        <span class="ui-icon ui-icon-closethick" id="clear-contact">close</span></a>
    </div>
    <div id="new_contact_dialog" class="ui-dialog-content ui-widget-content">
      <%= f.simple_fields_for :contact do |contact| %>
  <%#= f.input :title, :input_html=>{:size=>'15'} %>
        <%= contact.input :first_name, :input_html=>{:size=>'20',:class=>'fix'} %>
        <%= contact.input :last_name, :input_html=>{:size=>'20',:class=>'fix'} %>
        <%= contact.simple_fields_for :phones do |phone| %>
          <%= phone.association :phone_type, :label=>"Phone Type", :input_html=>{:class=>'auto fix'} %>
          <%= phone.input :phone_number, :label=>"Phone Number", :input_html=>{:size=>'15',:class=>'fix'} %>
        <% end %>
        <%= contact.simple_fields_for :emails do |email| %>
          <%= email.association :email_type, :label=>"Email Type", :input_html=>{:class=>'auto fix'} %>
          <%= email.input :email, :label=>"Email", :input_html=>{:size=>'15',:class=>'fix'} %>
        <%end%>
        <%= contact.simple_fields_for :messengers do |messenger| %>
          <%= messenger.association :messenger_type, :label=>"Messenger Type", :input_html=>{:class=>'auto fix'} %>
          <%= messenger.association :messenger_service, :label=>"Messenger Service", :input_html=>{:class=>'auto fix'} %><br/>
          <%= messenger.input :title, :label=>"Messenger ID", :input_html=>{:size=>'15',:class=>'fix'} %>
        <%end%>
      <%end%>
      <%= link_to "Save", "#", :id=> "save-contact", :class=>"button big" %> <span style="vertical-align: bottom">or
        <%= link_to 'Cancel', "#", :class=>'big', :id=>"clear-contact" %></span>
    </div>
  </div>
</div>

