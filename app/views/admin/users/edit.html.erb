<%= content_for :css do %>
    <%= stylesheet_link_tag "users/new" %>
<% end %>
<%= content_for :header do %>

    <% if params[:type] == "pass" %>
        <h1>Change Password</h1>
    <% else %>
        <h1>Edit Your Profile</h1>
    <% end %>
<% end %>
<% if params[:type] == "pass" %>
    <%= render :partial => "password" %>
<% else %>
    <%= link_to "Change Password", edit_admin_user_path(@user, :type=>"pass") %>
    <%= render :partial => "form" %>
<% end %>
