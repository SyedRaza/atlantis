<%= content_for :sidebar do %>
    <%= render :partial => 'filter' %>
<% end %>

<%= content_for :header do %>
    <h1>Opportunities</h1>

    <%= link_to '<span class="ui-icon ui-icon-document">&nbsp;</span>New Opportunity'.html_safe, new_opportunity_url, :class=>'right', :style=>'margin-right:95px;' %>
<% end %>

<%= content_for :js do %>
    <%= javascript_include_tag "opportunities/index" %>
    <%= javascript_include_tag "notes/global" %>
<% end %>

<%= content_for :css do %>
    <%= stylesheet_link_tag "opportunities/index" %>
    <%= theme_stylesheet_link_tag 'notes/index' %>
<% end %>

<div id="opportunities_container" class="sidetabs-container">
  <div id="opportunity_selector" class="sidetabs-tabs">
    <%= side_tabs_for_periods(:opportunities, ['All Active', "Today", "This Week", "This Month", "This Year", "Archives"]) %>
  </div>
  <div id="opportunities" class="sidetabs-pane">
  </div>
</div>